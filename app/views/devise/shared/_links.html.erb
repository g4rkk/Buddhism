<div class="text-center space-y-2">
  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "ユーザー登録はこちら", new_registration_path(resource_name), class: "btn btn-secondary w-full" %>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "パスワードをお忘れの方はこちら", new_password_path(resource_name), class: "link link-primary block" %>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "link link-secondary block" %>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "link link-primary block" %>
  <% end %>

  <!-- Omniauth 相关部分 -->
  <% if devise_mapping.omniauthable? %>
    <% resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Googleで登録します", omniauth_authorize_path(resource_name, :google_oauth2), class: "btn btn-danger w-full", data: { turbo: false } %>
    <% end %>
  <% end %>
</div>
