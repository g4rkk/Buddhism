<section class="hero bg-info rounded-lg">
  <div class="hero-body">
    <div class="container text-center mb-20">
      <h1 class="text-6xl font-bold text-white font-sans">パスワードの変更</h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card bg-base-200 rounded-lg p-6">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <!-- 新しいパスワード -->
            <div class="form-control">
              <%= f.label :password, "新しいパスワード", class: "label" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "新しいパスワード", class: "input input-bordered w-full" %>
            </div>

            <!-- パスワード確認 -->
            <div class="form-control">
              <%= f.label :password_confirmation, "パスワード（確認）", class: "label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認", class: "input input-bordered w-full" %>
            </div>

            <!-- パスワード変更ボタン -->
            <div class="form-control mt-6">
              <%= f.submit "パスワードを変更する", class: "btn btn-primary w-full" %>
            </div>
          <% end %>

          <div class="form-control mt-4">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
