<section class="hero text-xl bg-info rounded-lg">
  <div class="hero-body">
    <div class="container text-center mb-20">
      <h1 class="text-xl font-bold text-white font-sans">新規登録</h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card bg-base-200 rounded-lg p-6">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <!-- ユーザー名 -->
            <div class="form-control">
              <%= f.label :username, "ユーザー名", class: "label" %>
              <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "ユーザー名", class: "input input-bordered w-full" %>
            </div>

            <!-- メールアドレス -->
            <div class="form-control">
              <%= f.label :email, "メールアドレス", class: "label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "input input-bordered w-full" %>
            </div>

            <!-- パスワード -->
            <div class="form-control">
              <%= f.label :password, "パスワード", class: "label" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "input input-bordered w-full" %>
            </div>

            <!-- パスワード確認 -->
            <div class="form-control">
              <%= f.label :password_confirmation, "パスワード（確認）", class: "label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（確認）", class: "input input-bordered w-full" %>
            </div>

            <!-- 登録ボタン -->
            <div class="form-control mt-6">
              <%= f.submit "登録", class: "btn btn-primary w-full" %>
            </div>
          <% end %>

          <!-- Google 登录按钮 -->
          <div class="form-control mt-4">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
