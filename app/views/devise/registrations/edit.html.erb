<h2><%= resource_name.to_s.humanize %>の編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- ユーザー名 -->
  <div class="field">
    <%= f.label :username, "ユーザー名" %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "input" %>
  </div>

  <!-- メールアドレス -->
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
  </div>

  <!-- メール確認待ち -->
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>現在、確認待ちのメールアドレス: <%= resource.unconfirmed_email %></div>
  <% end %>

  <!-- パスワード -->
  <div class="field">
    <%= f.label :password, "パスワード" %> <i>(変更しない場合は空のまま)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %>文字以上</em>
    <% end %>
  </div>

  <!-- パスワード確認 -->
  <div class="field">
    <%= f.label :password_confirmation, "パスワード（確認）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
  </div>

  <!-- 現在のパスワード -->
  <div class="field">
    <%= f.label :current_password, "現在のパスワード" %> <i>(変更内容を確認するために必要です)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
  </div>

  <!-- 更新ボタン -->
  <div class="actions">
    <%= f.submit "更新", class: "button is-success" %>
  </div>
<% end %>

<h3>アカウントの削除</h3>

<p>不満ですか？ <%= button_to "アカウントを削除", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, method: :delete %></p>

<%= link_to "戻る", :back %>
