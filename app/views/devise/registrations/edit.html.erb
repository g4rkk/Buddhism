<h2 class="text-2xl font-semibold mb-4"><%= resource_name.to_s.humanize %>の編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- ユーザー名 -->
  <div class="form-control">
    <%= f.label :username, "ユーザー名", class: "label" %>
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "input input-bordered w-full" %>
  </div>

  <!-- メールアドレス -->
  <div class="form-control">
    <%= f.label :email, "メールアドレス", class: "label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
  </div>

  <!-- メール確認待ち -->
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="text-sm text-gray-500">現在、確認待ちのメールアドレス: <%= resource.unconfirmed_email %></div>
  <% end %>

  <!-- パスワード -->
  <div class="form-control">
    <%= f.label :password, "パスワード", class: "label" %> 
    <i class="text-sm">(変更しない場合は空のまま)</i>
    <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full" %>
    <% if @minimum_password_length %>
      <em class="text-sm">(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
  </div>

  <!-- パスワード確認 -->
  <div class="form-control">
    <%= f.label :password_confirmation, "パスワード（確認）", class: "label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
  </div>

  <!-- 現在のパスワード -->
  <div class="form-control">
    <%= f.label :current_password, "現在のパスワード", class: "label" %> 
    <i class="text-sm">(変更内容を確認するために必要です)</i>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "input input-bordered w-full" %>
  </div>

  <!-- 更新ボタン -->
  <div class="form-control mt-6">
    <%= f.submit "更新", class: "btn btn-success w-full" %>
  </div>
<% end %>

<h3 class="text-xl font-semibold mt-10 mb-4">アカウントの削除</h3>

<p>不満ですか？ 
  <%= button_to "アカウントを削除", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, method: :delete, class: "btn btn-error" %>
</p>

<%= link_to "戻る", :back, class: "link link-primary" %>
