<div class="container mx-auto px-4 py-8">
  <h1 class="text-4xl font-extrabold mb-6 text-center text-primary">仏教の教えと経典</h1>

  <div class="flex justify-end mb-6">
  <% if current_user&.admin? %>
    <%= link_to '新しい書籍をアップロード', new_book_path, class: "btn btn-primary btn-sm" %>
  <% end %>
  <%= link_to '私の書籍のブックマーク', bookmarks_books_path, class: "btn btn-secondary btn-sm" %>
</div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @books.each do |book| %>
      <%= render partial: 'books/book', locals: { book: book } %>
    <% end %>
  </div>
</div>
