<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">新しい書籍をアップロード</h1>

  <% if @book.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for @book, html: { multipart: true, class: "space-y-6" } do |f| %>
    <div class="form-control">
      <%= f.label :title, "書籍タイトル", class: "label" %>
      <%= f.text_field :title, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control">
      <%= f.label :sect, "教派", class: "label" %>
      <%= f.text_field :sect, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control">
      <%= f.label :number, "番号", class: "label" %>
      <%= f.number_field :number, class: "input input-bordered w-full", min: 1 %>
    </div>

    <div class="form-control">
      <%= f.label :file, "ファイルアップロード", class: "label" %>
      <%= f.file_field :file, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control mt-6">
      <%= f.submit "アップロード", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
</div>
