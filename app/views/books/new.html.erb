<div class="container mx-auto px-4 py-8">
  <h1 class="text-4xl font-extrabold text-center text-primary mb-8">新しい書籍をアップロード</h1>

  <% if @book.errors.any? %>
    <div class="alert alert-error shadow-lg mb-6">
      <div>
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <%= form_for @book, html: { multipart: true, class: "space-y-6" } do |f| %>
    <div class="form-control">
      <%= f.label :title, "書籍タイトル", class: "label font-semibold text-lg" %>
      <%= f.text_field :title, class: "input input-bordered w-full", placeholder: "タイトルを入力してください" %>
    </div>

    <div class="form-control">
      <%= f.label :sect, "教派", class: "label font-semibold text-lg" %>
      <%= f.text_field :sect, class: "input input-bordered w-full", placeholder: "教派を入力してください" %>
    </div>

    <div class="form-control">
      <%= f.label :number, "番号", class: "label font-semibold text-lg" %>
      <%= f.number_field :number, class: "input input-bordered w-full", min: 1, placeholder: "番号を入力してください" %>
    </div>

    <div class="form-control">
      <%= f.label :file, "ファイルアップロード", class: "label font-semibold text-lg" %>
      <%= f.file_field :file, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control mt-8">
      <%= f.submit "アップロード", class: "btn btn-primary btn-lg w-full" %>
    </div>
  <% end %>
</div>
