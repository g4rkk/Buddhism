<div class="card shadow-lg compact bg-base-100">
  <div class="card-body">
    <h2 class="card-title text-xl font-semibold text-primary mb-2"><%= book.title %></h2>
    <p class="text-sm text-gray-600 mb-1">教派: <%= book.sect %></p>
    <p class="text-sm text-gray-600 mb-4">番号: <%= book.number %></p>

    <div class="card-actions justify-between items-center">
      <% if current_page?(books_path) %>
        <%= button_to toggle_bookmark_book_path(book), method: :post, class: "btn btn-link btn-sm text-blue-500 hover:text-blue-700 toggle-bookmark", data: { book_id: book.id } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path d="M5 4a2 2 0 012-2h6a2 2 0 012 2v14l-5-2.5L5 18V4z" />
          </svg>
          <%= current_user&.bookmarks&.exists?(book: book) ? 'ブックマーク済み' : 'ブックマーク' %>
        <% end %>
      <% end %>

      <%= link_to book.file.url, download: '', class: "btn btn-link btn-sm text-green-500 hover:text-green-700" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
        ダウンロード
      <% end %>
    </div>
  </div>
</div>
